#ifndef OSGEARTH_MASK_NODE_H
#define OSGEARTH_MASK_NODE_H 1

#include <osgEarthFeatures/Common>
#include <osg/Group>

namespace osgEarth
{
    class OSGEARTH_EXPORT MaskNode : public osg::Group
    {
    public:
        MaskNode();
        MaskNode( const MaskNode& rhs, const osg::CopyOp& op =osg::CopyOp::DEEP_COPY_ALL );        

        META_Node(osgEarth, MaskNode);

    protected:

        /** dtor */
        virtual ~MaskNode();
    };
}

#endif // OSGEARTH_MASK_NODE_H


